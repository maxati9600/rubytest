<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label '學校信箱' %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label '密碼' %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label '確認密碼' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>
  <div class="field">
    <%= f.label '學號' %><br />
    <%= f.text_field 'studentid', autocomplete: "off" %>
  </div>

   <div class="field">
    <%= f.label '理由' %><br />
    <%= f.text_field 'reason', autocomplete: "off" %>
  </div>

 <div class="field">
    <%= f.label '主機' %><br />
    <%= f.text_field 'server', autocomplete: "off" %>
  </div>


  <div class="actions">
    <%= f.submit "註冊" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
